{% schema %}
{
  "name": "Bracelet Size Guide",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "HOW TO: USE OUR PRINTABLE GUIDE"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Incoming, our printable bracelet sizer is here to help you find the right fit. All you need for this is a printer and paper.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Download Our Guide"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Media Settings"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "guide_image",
      "label": "Guide Image"
    },
    {
      "type": "video_url",
      "id": "external_video",
      "label": "External Video URL (Optional)",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "header",
      "content": "Size Guide Settings"
    },
    {
      "type": "range",
      "id": "min_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "cm",
      "label": "Minimum Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "max_size",
      "min": 15,
      "max": 40,
      "step": 1,
      "unit": "cm",
      "label": "Maximum Size",
      "default": 22
    },
    {
      "type": "range",
      "id": "size_increment",
      "min": 0.5,
      "max": 2,
      "step": 0.5,
      "unit": "cm",
      "label": "Size Increment",
      "default": 1
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Margin",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Bracelet Size Guide"
    }
  ]
}
{% endschema %}

<style>
  * {
    box-sizing: border-box;
  }

  .bracelet-guide {
    width: 100%;
    max-width: 100%;
    padding: 0;
    background-color: #ffffff;
  }

  .guide-layout {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    min-height: 100vh;
  }

  .media-section {
    flex: 1;
    position: relative;
    background-color: #f5f5f5;
  }

  .video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .guide-video,
  .guide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .content-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 60px;
    background-color: #ffffff;
  }

  .content-inner {
    max-width: 480px;
    margin: 0 auto;
    text-align: left;
  }

  .guide-heading {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 42px;
    font-weight: 400;
    letter-spacing: 1px;
    margin-bottom: 30px;
    text-transform: uppercase;
    color: #000000;
  }

  .guide-description {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 18px;
    line-height: 1.6;
    color: #333333;
    margin-bottom: 40px;
  }

  .guide-button {
    display: inline-block;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #000000;
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .guide-button:hover {
    border-bottom-color: #000000;
  }

  @media screen and (max-width: 989px) {
    .guide-layout {
      flex-direction: column;
      min-height: auto;
    }

    .media-section {
      height: auto;
      min-height: 260px;
      max-height: 400px;
    }

    .video-wrapper,
    .guide-image {
      height: 100%;
      width: 100%;
      object-fit: cover;
      object-position: center;
    }

    .content-section {
      padding: 32px 20px;
    }

    .content-inner {
      max-width: 100%;
      text-align: center;
    }

    .guide-heading {
      font-size: 26px;
      line-height: 1.3;
      margin-bottom: 20px;
    }

    .guide-description {
      font-size: 15px;
      line-height: 1.6;
      margin-bottom: 28px;
    }

    .guide-button {
      font-size: 14px;
      padding-bottom: 2px;
      border: none;
      border-bottom: 1px solid transparent;
    }

    .guide-button:hover {
      border-bottom: 1px solid #000;
      background-color: transparent;
      color: #000;
    }
  }
</style>

<div
  class="bracelet-guide"
  style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;"
>
  <div class="guide-layout">
    <div class="media-section">
      {% if section.settings.video != blank %}
        <div class="video-wrapper">
          {{
            section.settings.video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              playsinline: true,
              class: 'guide-video'
          }}
        </div>
      {% elsif section.settings.external_video != blank %}
        <div class="video-wrapper">
          {% assign video_url = section.settings.external_video %}
          {% if video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
            <iframe
              class="guide-video"
              src="{{ video_url | replace: 'watch?v=', 'embed/' }}?autoplay=1&loop=1&playlist={{ video_url | split: '=' | last }}&controls=0&mute=1&playsinline=1&rel=0"
              frameborder="0"
              allow="autoplay; encrypted-media"
              allowfullscreen
            ></iframe>
          {% elsif video_url contains 'vimeo.com' %}
            <iframe
              class="guide-video"
              src="{{ video_url | replace: 'vimeo.com/', 'player.vimeo.com/video/' }}?autoplay=1&loop=1&background=1&muted=1"
              frameborder="0"
              allow="autoplay; encrypted-media"
              allowfullscreen
            ></iframe>
          {% endif %}
        </div>
      {% elsif section.settings.guide_image != blank %}
        <img
          src="{{ section.settings.guide_image | img_url: '2000x' }}"
          alt="Bracelet Size Guide"
          class="guide-image"
          loading="lazy"
        >
      {% endif %}
    </div>

    <div class="content-section">
      <div class="content-inner">
        <h2 class="guide-heading">{{ section.settings.heading }}</h2>
        <div class="guide-description">{{ section.settings.description }}</div>
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="guide-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

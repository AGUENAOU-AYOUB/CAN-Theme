{% comment %}
  Tresom Banner Section
  - Three-panel layout with video center and image sides
  - Side panels: Title gets pushed up when "Découvrir" appears on hover
  - Center panel: "Découvrir" underline only appears on hover
  - Futura font applied to all text elements
  - Fully responsive design for mobile and desktop
{% endcomment %}

<style>
  .tresom-banner-container {
    width: 100%;
    max-width: {{ section.settings.section_width }}px;
    margin-left: auto;
    margin-right: auto;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .tresom-banner {
    display: flex;
    flex-direction: row;
    width: 100%;
    gap: {{ section.settings.gap }}px;
  }

  .tresom-banner__panel {
    position: relative;
    overflow: hidden;
    flex: 1;
    cursor: pointer;
  }

  .tresom-banner__content {
    position: absolute;
    {% if section.settings.side_content_position == 'top' %}
      top: {{ section.settings.content_padding_bottom }}px;
      bottom: auto;
    {% elsif section.settings.side_content_position == 'center' %}
      top: 50%;
      bottom: auto;
      transform: translateY(-50%);
    {% else %}
      bottom: {{ section.settings.content_padding_bottom }}px;
      top: auto;
    {% endif %}
    left: 0;
    width: 100%;
    padding: 0 {{ section.settings.content_padding_horizontal }}px;
    color: {{ section.settings.text_color }};
    text-align: center;
    z-index: 2;
  }

  /* Center panel content positioning */
  .tresom-banner__center-panel .tresom-banner__content {
    {% if section.settings.center_content_position == 'top' %}
      top: {{ section.settings.content_padding_bottom }}px;
      bottom: auto;
    {% elsif section.settings.center_content_position == 'center' %}
      top: 50%;
      bottom: auto;
      transform: translateY(-50%);
    {% else %}
      bottom: {{ section.settings.content_padding_bottom }}px;
      top: auto;
    {% endif %}
  }

  .tresom-banner__heading {
    font-family: 'Futura', {{ section.settings.heading_font_family }};
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    margin-bottom: 0;
    color: {{ section.settings.heading_color }};
    transition: transform 0.25s ease, margin-bottom 0.25s ease;
  }

  /* Push title up on hover */
  .tresom-banner__side-panel:hover .tresom-banner__heading {
    transform: translateY(-8px);
    margin-bottom: 5px;
  }

  .tresom-banner__link {
    display: inline-block;
    font-family: 'Futura', {{ section.settings.link_font_family }};
    font-size: {{ section.settings.link_font_size }}px;
    color: {{ section.settings.link_color }};
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
    padding-bottom: 2px;
  }

  .tresom-banner__link:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: {{ section.settings.link_color }};
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.25s ease-out;
  }

  .tresom-banner__link:hover:after {
    transform: scaleX(1);
  }

  .tresom-banner__image,
  .tresom-banner__video {
    width: 100%;
    height: {{ section.settings.banner_height }}px;
    object-fit: cover;
  }

  .tresom-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 50%);
    z-index: 1;
  }

  /* Side panel hover effects with title push-up */
  .tresom-banner__side-panel .tresom-banner__discover {
    opacity: 0;
    visibility: hidden;
    transform: translateY(8px);
    transition: opacity 0.25s ease, visibility 0.25s ease, transform 0.25s ease;
  }

  .tresom-banner__side-panel:hover .tresom-banner__discover {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  /* Ensure underline appears with text */
  .tresom-banner__side-panel:hover .tresom-banner__link:after {
    transform: scaleX(1);
    transition-delay: 0.05s;
  }

  @media screen and (max-width: 768px) {
    .tresom-banner {
      flex-direction: column;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .tresom-banner__image,
    .tresom-banner__video {
      height: {{ section.settings.mobile_banner_height }}px;
    }

    .tresom-banner__heading {
      font-size: {{ section.settings.mobile_heading_font_size }}px;
    }

    .tresom-banner__link {
      font-size: {{ section.settings.mobile_link_font_size }}px;
    }

    .tresom-banner__content {
      padding: 0 {{ section.settings.mobile_content_padding_horizontal }}px;
      {% if section.settings.side_content_position == 'top' %}
        top: {{ section.settings.mobile_content_padding_bottom }}px;
        bottom: auto;
      {% elsif section.settings.side_content_position == 'center' %}
        top: 50%;
        bottom: auto;
        transform: translateY(-50%);
      {% else %}
        bottom: {{ section.settings.mobile_content_padding_bottom }}px;
        top: auto;
      {% endif %}
    }

    /* Adjust center panel content for mobile */
    .tresom-banner__center-panel .tresom-banner__content {
      {% if section.settings.center_content_position == 'top' %}
        top: {{ section.settings.mobile_content_padding_bottom }}px;
        bottom: auto;
      {% elsif section.settings.center_content_position == 'center' %}
        top: 50%;
        bottom: auto;
        transform: translateY(-50%);
      {% else %}
        bottom: {{ section.settings.mobile_content_padding_bottom }}px;
        top: auto;
      {% endif %}
    }
  }
</style>

<div class="tresom-banner-container">
  <div class="tresom-banner">
    {% comment %} Left Panel {% endcomment %}
    <div class="tresom-banner__panel tresom-banner__side-panel">
      <a href="{{ section.settings.left_link_url }}" class="tresom-banner__panel-link">
        {% if section.settings.left_image != blank %}
          <img
            src="{{ section.settings.left_image | img_url: 'master' }}"
            alt="{{ section.settings.left_heading }}"
            class="tresom-banner__image"
            loading="lazy"
          >
        {% else %}
          <div class="tresom-banner__image" style="background-color: #f4f4f4;"></div>
        {% endif %}

        <div class="tresom-banner__overlay"></div>

        <div class="tresom-banner__content">
          {% if section.settings.left_heading != blank %}
            <h2 class="tresom-banner__heading">{{ section.settings.left_heading }}</h2>
          {% endif %}

          {% if section.settings.left_link_text != blank and section.settings.left_link_url != blank %}
            <div class="tresom-banner__discover">
              <span class="tresom-banner__link">
                {{ section.settings.left_link_text }}
              </span>
            </div>
          {% endif %}
        </div>
      </a>
    </div>

    {% comment %} Center Panel (Video) {% endcomment %}
    <div class="tresom-banner__panel tresom-banner__center-panel">
      <a href="{{ section.settings.center_link_url }}" class="tresom-banner__panel-link">
        {% if section.settings.center_video_url != blank %}
          <video
            class="tresom-banner__video"
            autoplay
            muted
            loop
            playsinline
          >
            <source src="{{ section.settings.center_video_url }}" type="video/mp4">
          </video>
        {% elsif section.settings.center_image != blank %}
          <img
            src="{{ section.settings.center_image | img_url: 'master' }}"
            alt="{{ section.settings.center_heading }}"
            class="tresom-banner__image"
            loading="lazy"
          >
        {% else %}
          <div class="tresom-banner__image" style="background-color: #f4f4f4;"></div>
        {% endif %}

        <div class="tresom-banner__overlay"></div>

        <div class="tresom-banner__content">
          {% if section.settings.center_heading != blank %}
            <h2 class="tresom-banner__heading">{{ section.settings.center_heading }}</h2>
          {% endif %}

          {% if section.settings.center_link_text != blank and section.settings.center_link_url != blank %}
            <span class="tresom-banner__link">
              {{ section.settings.center_link_text }}
            </span>
          {% endif %}
        </div>
      </a>
    </div>

    {% comment %} Right Panel {% endcomment %}
    <div class="tresom-banner__panel tresom-banner__side-panel">
      <a href="{{ section.settings.right_link_url }}" class="tresom-banner__panel-link">
        {% if section.settings.right_image != blank %}
          <img
            src="{{ section.settings.right_image | img_url: 'master' }}"
            alt="{{ section.settings.right_heading }}"
            class="tresom-banner__image"
            loading="lazy"
          >
        {% else %}
          <div class="tresom-banner__image" style="background-color: #f4f4f4;"></div>
        {% endif %}

        <div class="tresom-banner__overlay"></div>

        <div class="tresom-banner__content">
          {% if section.settings.right_heading != blank %}
            <h2 class="tresom-banner__heading">{{ section.settings.right_heading }}</h2>
          {% endif %}

          {% if section.settings.right_link_text != blank and section.settings.right_link_url != blank %}
            <div class="tresom-banner__discover">
              <span class="tresom-banner__link">
                {{ section.settings.right_link_text }}
              </span>
            </div>
          {% endif %}
        </div>
      </a>
    </div>
  </div>
</div>

<style>
  /* Additional styles to fix link behavior */
  .tresom-banner__panel-link {
    display: block;
    width: 100%;
    height: 100%;
    color: inherit;
    text-decoration: none;
  }

  /* Ensure Futura font is loaded */
  @font-face {
    font-family: 'Futura';
    src: url('{{ "futura.woff2" | asset_url }}') format('woff2'),
         url('{{ "futura.woff" | asset_url }}') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>


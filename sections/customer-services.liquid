<div
  class="customer-service-section page-width"
  style="
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  <div class="customer-service-grid">
    <!-- Left Sidebar Menu -->
    <div
      class="customer-service-menu"
      style="
        font-family: {{ section.settings.menu_font_family.family }};
        font-size: {{ section.settings.menu_font_size }}px;
      "
    >
      <h2
        style="
          color: {{ section.settings.menu_heading_color }};
          font-size: {{ section.settings.menu_heading_size }}px;
          margin-bottom: {{ section.settings.menu_heading_margin }}px;
          font-weight: {{ section.settings.menu_heading_weight }};
        "
      >
        {{ section.settings.menu_heading }}
      </h2>

      <ul class="customer-service-links" style="color: {{ section.settings.menu_text_color }};">
        {% for link in section.settings.footer_menu.links %}
          <li>
            <a
              href="{{ link.url }}"
              style="
                color: {{ section.settings.menu_link_color }};
                padding: {{ section.settings.menu_link_padding }}px 0;
              "
              class="cs-menu-link"
            >
              {{- link.title -}}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Right Content Area -->
    <div
      class="customer-service-content"
      style="
        font-family: {{ section.settings.content_font_family.family }};
        color: {{ section.settings.content_text_color }};
      "
    >
      <!-- Overview Section -->
      <div class="cs-section">
        <h2
          style="
            color: {{ section.settings.content_heading_color }};
            font-size: {{ section.settings.content_heading_size }}px;
            margin-bottom: {{ section.settings.content_heading_margin }}px;
            font-weight: {{ section.settings.content_heading_weight }};
          "
        >
          {{ section.settings.overview_heading }}
        </h2>

        <p
          style="
            font-size: {{ section.settings.content_text_size }}px;
            line-height: {{ section.settings.content_line_height }};
          "
        >
          {{ section.settings.overview_text }}
        </p>
      </div>

      <!-- Contact Information -->
      <div class="cs-section">
        <!-- Email -->
        <div class="cs-contact-item">
          <h3
            style="
              color: {{ section.settings.subheading_color }};
              font-size: {{ section.settings.subheading_size }}px;
              margin-bottom: {{ section.settings.subheading_margin }}px;
            "
          >
            {{ section.settings.email_heading }}
          </h3>
          <a
            href="mailto:{{ section.settings.email_address }}"
            style="
              color: {{ section.settings.contact_link_color }};
              font-size: {{ section.settings.contact_text_size }}px;
            "
          >
            {{- section.settings.email_address -}}
          </a>
        </div>

        <!-- Phone -->
        <div class="cs-contact-item">
          <h3
            style="
              color: {{ section.settings.subheading_color }};
              font-size: {{ section.settings.subheading_size }}px;
              margin-bottom: {{ section.settings.subheading_margin }}px;
            "
          >
            {{ section.settings.phone_heading }}
          </h3>
          <a
            href="tel:{{ section.settings.phone_number }}"
            style="
              color: {{ section.settings.contact_link_color }};
              font-size: {{ section.settings.contact_text_size }}px;
            "
          >
            {{- section.settings.phone_number -}}
          </a>
        </div>

        <!-- Hours -->
        <div class="cs-contact-item">
          <h3
            style="
              color: {{ section.settings.subheading_color }};
              font-size: {{ section.settings.subheading_size }}px;
              margin-bottom: {{ section.settings.subheading_margin }}px;
            "
          >
            {{ section.settings.hours_heading }}
          </h3>

          <div
            class="cs-hours-grid"
            style="
              font-size: {{ section.settings.hours_text_size }}px;
              color: {{ section.settings.hours_text_color }};
            "
          >
            {% for block in section.blocks %}
              {% if block.type == 'hours' %}
                <div class="cs-hours-row">
                  <span class="cs-day">{{ block.settings.day }}</span>
                  <span class="cs-time">{{ block.settings.hours }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .customer-service-section {
    margin: 0 auto;
  }

  .customer-service-grid {
    display: grid;
    grid-template-columns: minmax(200px, 1fr) minmax(300px, 3fr);
    gap: 60px;
  }

  .customer-service-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .cs-menu-link {
    display: block;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .cs-menu-link:hover {
    opacity: 0.7;
  }

  .cs-section {
    margin-bottom: 40px;
  }

  .cs-contact-item {
    margin-bottom: 30px;
  }

  .cs-hours-grid {
    display: grid;
    gap: 10px;
  }

  .cs-hours-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  @media screen and (max-width: 989px) {
    .customer-service-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .customer-service-menu {
      border-bottom: 1px solid {{ section.settings.mobile_divider_color }};
      padding-bottom: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add smooth scroll for menu links
    const menuLinks = document.querySelectorAll('.cs-menu-link');

    menuLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        const href = this.getAttribute('href');

        if (href.startsWith('#')) {
          e.preventDefault();
          const target = document.querySelector(href);

          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>


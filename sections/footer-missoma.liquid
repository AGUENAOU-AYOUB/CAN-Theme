<style>
  /* Missoma Footer Styles */
  .missoma-footer {
    padding: 60px 0 40px;
    background-color: #05728E ;
    border-top: 1px solid #e5e5e5;
    font-family: Poppins, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    font-weight: 600 !important;
    
  }

  .missoma-footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Newsletter Styles */
  .missoma-footer__newsletter {
    margin-bottom: 60px;
    max-width: 100%;
  }

  .missoma-footer__newsletter-title {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 30px;
    letter-spacing: 0.5px;
    color: #ffffff;
    font-family: Poppins, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }

  .missoma-footer__form {
    margin-bottom: 15px;
  }

  .missoma-footer__form-field {
    display: flex;
    border-bottom: 1px solid #ffffff;
    margin-bottom: 20px;
    position: relative;
  }

  .missoma-footer__form-input {
    flex: 1;
    border-top: 1px solid white;
    border-bottom: 1px solid white;
    border-left:none;
    border-right: none;
    background: transparent;
    padding: 12px 0;
    font-size: 16px;
    color: #ffffff;
    outline: none !important;
  }

  .missoma-footer__form-input::placeholder {
    color: #ffffff;
  }
  
  .missoma-footer__form-submit {
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    
  }

  .missoma-footer__form-consent {
    margin-bottom: 20px;
  }

  .missoma-footer__form-checkbox {
    display: flex;
    align-items: flex-start;
  }

  .missoma-footer__checkbox {
    margin-right: 10px;
    margin-top: 3px;
    width: 16px;
    height: 16px;
  }

  .missoma-footer__checkbox-label {
    font-size: 14px;
    color: #ffffff;
    line-height: 1.4;
  }

  .missoma-footer__link {
    color: #ffffff;
    text-decoration: underline;
  }

  /* Footer Columns */
  .missoma-footer__columns {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 60px;
    gap: 40px;
  }

  .missoma-footer__column {
    flex: 1;
    min-width: 200px;
  }

  .missoma-footer__column-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 20px;
    letter-spacing: 0.5px;
    color: #ffffff;
  }

  .missoma-footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .missoma-footer__menu-item {
    margin-bottom: 15px;
  }

  .missoma-footer__menu-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
    transition: opacity 0.2s ease;
  }

  .missoma-footer__menu-link:hover {
    color: #25DA72
  }

  /* Accordion Styles (Mobile Only) */
  .missoma-footer__accordions {
    display: none;
    margin-bottom: 30px;
  }

  .missoma-footer__accordion {
    border-bottom: 1px solid #e5e5e5;
  }

  .missoma-footer__accordion-toggle {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    color: #ffffff;
    letter-spacing: 0.5px;
  }

  .missoma-footer__accordion-icon {
    transition: transform 0.3s ease;
  }

  .missoma-footer__accordion-toggle[aria-expanded="true"] .missoma-footer__accordion-icon {
    transform: rotate(45deg);
  }

  .missoma-footer__accordion-content {
    display: none;
    padding: 0 0 15px;
  }

  .missoma-footer__accordion-toggle[aria-expanded="true"] + .missoma-footer__accordion-content {
    display: block;
  }

  /* Locale Selector */
  .bottom-footer {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 20px;
    row-gap: 20px;
    column-gap:100px;
  }
  .missoma-footer__locale {
    position: relative; 
    max-width: 400px;
  }

  .missoma-footer__locale-toggle {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background-color: #05728E;
    border: 1px solid #ffffff;
    border-radius: 0;
    text-align: left;
    cursor: pointer;
    font-size: 14px;
    color: #ffffff;
    font-family: "poppins", sans-serif;
    font-weight: 500;
     transition: color 0.5s ease, background-color 0.5s ease, border 0.5s ease;
  }
  
  .missoma-footer__locale-toggle:hover{
    color: #05728E;
    background-color: #ffffff;
    border: 1px solid #05728E;
   
  }

  .missoma-footer__locale-flag {
    display: flex;
    align-items: center;
    margin-right: 10px;
  }


<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Accordion functionality (mobile only)
    const accordionToggles = document.querySelectorAll('.missoma-footer__accordion-toggle');

    accordionToggles.forEach(toggle => {
      toggle.addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
      });
    });

    // Country selector functionality
    const localeToggle = document.querySelector('.missoma-footer__locale-toggle');

    if (localeToggle) {
      localeToggle.addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', function(event) {
        if (!event.target.closest('.missoma-footer__locale') &&
            localeToggle.getAttribute('aria-expanded') === 'true') {
          localeToggle.setAttribute('aria-expanded', 'false');
        }
      });
    }

    // Newsletter form validation
    const newsletterForm = document.getElementById('newsletter-form');

    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(event) {
        const emailInput = this.querySelector('input[type="email"]');
        const consentCheckbox = this.querySelector('input[type="checkbox"]');

        if (!emailInput.value || !consentCheckbox.checked) {
          event.preventDefault();

          if (!emailInput.value) {
            emailInput.focus();
          } else if (!consentCheckbox.checked) {
            consentCheckbox.focus();
          }
        }
      });
    }
  });
</script>


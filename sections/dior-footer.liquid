<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle dropdown menus
    const dropdownToggles = document.querySelectorAll('[data-dropdown-toggle]');

    dropdownToggles.forEach(toggle => {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        const navItem = this.closest('.dior-footer__nav-item');
        const subnavList = navItem.querySelector('.dior-footer__subnav-list');

        if (subnavList) {
          this.classList.toggle('active');
          subnavList.classList.toggle('active');
        }
      });
    });

    // Accessibility toggle - Enhanced version exactly like Dior
    const accessibilityToggle = document.getElementById('accessibility-toggle');
    const accessibilityLabel = document.querySelector('.dior-footer__accessibility-label');

    if (accessibilityToggle && accessibilityLabel) {
      // Make the label clickable too
      accessibilityLabel.addEventListener('click', function() {
        accessibilityToggle.checked = !accessibilityToggle.checked;
        toggleHighContrast(accessibilityToggle.checked);
      });

      // Handle keyboard accessibility
      accessibilityLabel.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          accessibilityToggle.checked = !accessibilityToggle.checked;
          toggleHighContrast(accessibilityToggle.checked);
        }
      });

      accessibilityToggle.addEventListener('change', function() {
        toggleHighContrast(this.checked);
      });

      // Function to toggle high contrast mode
      function toggleHighContrast(enabled) {
        if (enabled) {
          document.body.classList.add('high-contrast');
          localStorage.setItem('high-contrast', 'true');
        } else {
          document.body.classList.remove('high-contrast');
          localStorage.setItem('high-contrast', 'false');
        }
      }

      // Check for saved preference
      if (localStorage.getItem('high-contrast') === 'true') {
        accessibilityToggle.checked = true;
        toggleHighContrast(true);
      }
    }


{% comment %}
  Dior Footer Section
  - Exact replica of Dior.com footer with correct background styling
  - Fully customizable through section settings
  - Responsive design for all devices
  - Working accessibility toggle (clickable text) and language selector
  - Proper email subscription to Shopify
{% endcomment %}

<div class="dior-footer-wrapper" style="background-color: {{ section.settings.outer_background_color }};">
  <div class="dior-footer" style="background-color: {{ section.settings.inner_background_color }};">
    {% if section.settings.show_promo_banners %}
      <div class="dior-footer__promo-banners">
        <div class="dior-footer__promo-container">
          {% for block in section.blocks %}
            {% if block.type == 'promo_banner' %}
              <div class="dior-footer__promo-item" {{ block.shopify_attributes }}>
                <div class="dior-footer__promo-content">
                  <h3 class="dior-footer__promo-title">{{ block.settings.title }}</h3>
                  <p class="dior-footer__promo-text">{{ block.settings.text }}</p>
                </div>
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="dior-footer__promo-link">
                    <span class="dior-footer__arrow">›</span>
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="dior-footer__separator"></div>
      </div>
    {% endif %}

    {% if section.settings.show_newsletter %}
      <div class="dior-footer__newsletter">
        <h3 class="dior-footer__newsletter-title">{{ section.settings.newsletter_title }}</h3>

        {%- form 'customer', id: 'dior-newsletter-form', class: 'dior-footer__form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">

          {% if form.errors %}
            <div class="dior-footer__form-error">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="dior-footer__form-group">
            <input
              type="email"
              name="contact[email]"
              id="dior-newsletter-email"
              class="dior-footer__input"
              value="{% if customer %}{{ customer.email }}{% endif %}"
              placeholder="{{ section.settings.newsletter_placeholder }}"
              required
            >
            <button type="submit" class="dior-footer__submit">
              {{ section.settings.newsletter_button }}
            </button>
          </div>
        {%- endform -%}

        {% if section.settings.show_accessibility_toggle %}
          <div class="dior-footer__accessibility">
            <label for="accessibility-toggle" class="dior-footer__accessibility-label" tabindex="0">
              {{ section.settings.accessibility_text }}
            </label>
            <div class="dior-footer__toggle">
              <input type="checkbox" id="accessibility-toggle" class="dior-footer__toggle-input">
              <span class="dior-footer__toggle-slider"></span>
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="dior-footer__navigation">
      <div class="dior-footer__nav-container">
        {% for block in section.blocks %}
          {% if block.type == 'menu' %}
            <div class="dior-footer__nav-column" {{ block.shopify_attributes }}>
              <h4 class="dior-footer__nav-title">{{ block.settings.title }}</h4>
              <ul class="dior-footer__nav-list">
                {% for link in linklists[block.settings.menu].links %}
                  <li class="dior-footer__nav-item">
                    <a href="{{ link.url }}" class="dior-footer__nav-link">
                      {{ link.title }}
                      {% if block.settings.show_dropdown_icons and link.links.size > 0 %}
                        <span class="dior-footer__dropdown-icon" data-dropdown-toggle>
                          <svg
                            width="12"
                            height="12"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                          >
                            <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </span>
                      {% endif %}
                    </a>
                    {% if link.links.size > 0 %}
                      <ul class="dior-footer__subnav-list">
                        {% for sublink in link.links %}
                          <li class="dior-footer__subnav-item">
                            <a href="{{ sublink.url }}" class="dior-footer__subnav-link">{{ sublink.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="dior-footer__bottom">
      <div class="dior-footer__social">
        <p class="dior-footer__social-title">{{ section.settings.social_title }}</p>
        <div class="dior-footer__social-links">
          {% if section.settings.show_tiktok %}
            <a href="{{ section.settings.tiktok_link }}" class="dior-footer__social-link" aria-label="TikTok">TikTok</a>
          {% endif %}
          {% if section.settings.show_instagram %}
            <a href="{{ section.settings.instagram_link }}" class="dior-footer__social-link" aria-label="Instagram"
              >Instagram</a
            >
          {% endif %}
          {% if section.settings.show_Youtube %}
            <a href="{{ section.settings.Youtube_link }}" class="dior-footer__social-link" aria-label="Youtube"
              >Youtube</a
            >
          {% endif %}
          {% if section.settings.show_facebook %}
            <a href="{{ section.settings.facebook_link }}" class="dior-footer__social-link" aria-label="Facebook"
              >Facebook</a
            >
          {% endif %}
          {% if section.settings.show_Linkedin %}
            <a href="{{ section.settings.Linkedin_link }}" class="dior-footer__social-link" aria-label="Linkedin"
              >Linkedin</a
            >
          {% endif %}
        </div>
      </div>

      <div class="dior-footer__logo">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | img_url: 'master' }}"
            alt="{{ shop.name }}"
            loading="lazy"
            width="{{ section.settings.logo_width }}"
            class="dior-footer__logo-image"
          >
        {% else %}
          <span class="dior-footer__logo-text">AZOR</span>
        {% endif %}
      </div>

      <div class="dior-footer__language">
        <div class="dior-footer__language-selector" id="language-selector">
          <p class="dior-footer__language-title">{{ section.settings.language_title }}</p>
          <div class="dior-footer__current-language">
            <span>{{ section.settings.current_language }}</span>
            <span class="dior-footer__arrow">›</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Language selector modal - Moved outside the footer for better positioning -->
<div id="language-modal" class="dior-footer__language-modal">
  <div class="dior-footer__language-modal-content">
    <div class="dior-footer__language-modal-header">
      <h3>{{ section.settings.language_modal_title }}</h3>
      <button class="dior-footer__language-modal-close">&times;</button>
    </div>
    <div class="dior-footer__language-modal-body">
      <div class="dior-footer__language-search">
        <input
          type="text"
          placeholder="{{ section.settings.language_search_placeholder }}"
          id="language-search"
          class="dior-footer__language-search-input"
        >
      </div>
      <div class="dior-footer__language-regions">
        {% for block in section.blocks %}
          {% if block.type == 'language_region' %}
            <div class="dior-footer__language-region" {{ block.shopify_attributes }}>
              <h4 class="dior-footer__language-region-title">{{ block.settings.region_title }}</h4>
              <ul class="dior-footer__language-list">
                {% for i in (1..block.settings.language_count) %}
                  {% assign language_title_key = 'language_' | append: i | append: '_title' %}
                  {% assign language_code_key = 'language_' | append: i | append: '_code' %}
                  {% assign language_url_key = 'language_' | append: i | append: '_url' %}

                  {% if block.settings[language_title_key] != blank %}
                    <li class="dior-footer__language-item">
                      <a
                        href="{{ block.settings[language_url_key] | default: '#' }}"
                        class="dior-footer__language-link"
                        data-language-code="{{ block.settings[language_code_key] }}"
                      >
                        {{ block.settings[language_title_key] }}
                      </a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>


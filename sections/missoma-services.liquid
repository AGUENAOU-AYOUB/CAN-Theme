<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselContainers = document.querySelectorAll('.missoma-carousel');
    
    carouselContainers.forEach(container => {
      if (container.getAttribute('data-carousel') === 'true') {
        initCarousel(container);
      }
    });
    
    function initCarousel(container) {
      const wrapper = container.querySelector('.missoma-services-wrapper');
      const slides = container.querySelectorAll('.missoma-slide');
      const prevButton = container.querySelector('.missoma-carousel-prev');
      const nextButton = container.querySelector('.missoma-carousel-next');
      const dots = container.querySelectorAll('.missoma-carousel-dot');
      
      let currentIndex = 0;
      let slideWidth = slides[0].offsetWidth + parseInt(slides[0].style.marginRight || 0);
      let autoplayInterval;
      
      // Initialize dots
      if (dots.length > 0) {
        dots[0].classList.add('active');
      }
      
      // Set up autoplay
      const autoplay = container.getAttribute('data-autoplay') === 'true';
      const autoplaySpeed = parseInt(container.getAttribute('data-autoplay-speed')) || 5000;
      
      if (autoplay) {
        startAutoplay();
      }
      
      function startAutoplay() {
        autoplayInterval = setInterval(() => {
          goToSlide((currentIndex + 1) % slides.length);
        }, autoplaySpeed);
      }
      
      function stopAutoplay() {
        clearInterval(autoplayInterval);
      }
      
      // Navigation functions
      function goToSlide(index) {
        if (index < 0) {
          index = slides.length - 1;
        } else if (index >= slides.length) {
          index = 0;
        }
        
        currentIndex = index;
        const offset = -currentIndex * slideWidth;
        wrapper.style.transform = `translateX(${offset}px)`;
        
        // Update dots
        dots.forEach(dot => dot.classList.remove('active'));
        if (dots[currentIndex]) {
          dots[currentIndex].classList.add('active');
        }
      }
      
      // Event listeners
      if (prevButton) {
        prevButton.addEventListener('click', () => {
          if (autoplay) stopAutoplay();
          goToSlide(currentIndex - 1);
          if (autoplay) startAutoplay();
        });
      }
      
      if (nextButton) {
        nextButton.addEventListener('click', () => {
          if (autoplay) stopAutoplay();
          goToSlide(currentIndex + 1);
          if (autoplay) startAutoplay();
        });
      }
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          if (autoplay) stopAutoplay();
          goToSlide(index);
          if (autoplay) startAutoplay();
        });
      });
      
      // Handle window resize
      window.addEventListener('resize', () => {
        slideWidth = slides[0].offsetWidth + parseInt(slides[0].style.marginRight || 0);
        goToSlide(currentIndex);
      });
      
      // Touch events for mobile swipe
      let touchStartX = 0;
      let touchEndX = 0;
      
      wrapper.addEventListener('touchstart', e => {
        touchStartX = e.changedTouches[0].screenX;
        if (autoplay) stopAutoplay();
      }, { passive: true });
      
      wrapper.addEventListener('touchend', e => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
        if (autoplay) startAutoplay();
      }, { passive: true });
      
      function handleSwipe() {
        const swipeThreshold = 50;
        if (touchEndX < touchStartX - swipeThreshold) {
          // Swipe left
          goToSlide(currentIndex + 1);
        } else if (touchEndX > touchStartX + swipeThreshold) {
          // Swipe right
          goToSlide(currentIndex - 1);
        }
      }
    }
  });
</script>


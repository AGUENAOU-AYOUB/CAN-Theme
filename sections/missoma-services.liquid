<div class="missoma-services-section" style="background-color: {{ section.settings.background_color }};">
  <div
    class="missoma-services-container {% if section.settings.enable_carousel %}missoma-carousel{% endif %}"
    data-carousel="{{ section.settings.enable_carousel }}"
    data-autoplay="{{ section.settings.enable_autoplay }}"
    data-autoplay-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
  >
    <div class="missoma-services-wrapper">
      {% for block in section.blocks %}
        <div
          class="missoma-service-column {% if section.settings.enable_carousel %}missoma-slide{% endif %}"
          {{ block.shopify_attributes }}
          style="{% if section.settings.enable_carousel %}margin-right: {{ section.settings.slide_spacing }}px;{% endif %}"
        >
          {% if block.settings.image != blank %}
            <div class="missoma-service-image-container" style="height: {{ section.settings.image_height }}px;">
              {% if block.settings.banner_text != blank and section.settings.show_badges %}
                <div
                  class="missoma-service-banner"
                  style="
                    background-color: {{ section.settings.badge_background_color }};
                    color: {{ section.settings.badge_text_color }};
                    font-size: {{ section.settings.badge_font_size }}px;
                  "
                >
                  {{ block.settings.banner_text }}
                </div>
              {% endif %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.heading }}"
                class="missoma-service-image"
                loading="lazy"
                style="object-fit: {{ section.settings.image_fit }};"
              >
            </div>
          {% endif %}

          <h2
            class="missoma-service-heading"
            style="
              font-size: {{ section.settings.heading_font_size }}px;
              color: {{ section.settings.heading_color }};
              margin-bottom: {{ section.settings.heading_margin }}px;
            "
          >
            {{ block.settings.heading }}
          </h2>

          <a
            href="{{ block.settings.link }}"
            class="missoma-service-link"
            style="
              font-size: {{ section.settings.link_font_size }}px;
              color: {{ section.settings.link_color }};
            "
          >
            {{ block.settings.link_text }}
          </a>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.enable_carousel %}
      {% if section.settings.show_arrows %}
        <button class="missoma-carousel-arrow missoma-carousel-prev" aria-label="Previous slide">
          <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 1L1 7L7 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="missoma-carousel-arrow missoma-carousel-next" aria-label="Next slide">
          <svg width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L7 7L1 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {% endif %}

      {% if section.settings.show_dots %}
        <div class="missoma-carousel-dots">
          {% for block in section.blocks %}
            <button
              class="missoma-carousel-dot"
              data-index="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>


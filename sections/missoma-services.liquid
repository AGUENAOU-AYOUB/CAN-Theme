    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: {{ section.settings.link_color }};
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform {{ section.settings.hover_transition_duration }}s ease;
  }

  .missoma-service-link:hover {
    color: {{ section.settings.link_hover_color }};
  }

  .missoma-service-link:hover:after {
    transform: scaleX(1);
    transform-origin: bottom left;
    background-color: {{ section.settings.link_hover_color }};
  }

    position: relative;
  }

  .missoma-slide {
    transition: transform 0.5s ease;
  }

  .missoma-carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.arrow_background_color }};
    color: {{ section.settings.arrow_color }};
    border: 1px solid {{ section.settings.arrow_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 2;
    transition: all 0.3s ease;
  }

  .missoma-carousel-arrow:hover {
    background-color: {{ section.settings.arrow_hover_background_color }};
    color: {{ section.settings.arrow_hover_color }};
  }

  .missoma-carousel-prev {
    left: {{ section.settings.arrow_offset }}px;
  }

  .missoma-carousel-next {
    right: {{ section.settings.arrow_offset }}px;
  }

  .missoma-carousel-dots {

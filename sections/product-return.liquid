      width: 35%;
      padding-right: 40px;
    }

    .return-forms-column {
      width: 65%;
    }

    .form-field {
      width: 48%;
    }
  }

  @media screen and (max-width: 767px) {
    .return-main-heading {
      font-size: calc({{ section.settings.heading_size }}px * 0.8);
    }

    .return-form-title {
      font-size: 20px;
    }

    .form-fields {
      flex-direction: column;
    }

    .form-field {
      width: 100%;
    }

    .instruction-step {
      align-items: flex-start;
    }
  }
</style>

<div class="product-return-section">
  <div class="return-container">
    <div class="return-header">
      <h1 class="return-main-heading">{{ section.settings.main_heading }}</h1>
    </div>

    <div class="return-content">
      <!-- Left Column: Return Policy -->
      <div class="return-policy-column">
        <h3 class="return-policy-title">{{ section.settings.policy_title }}</h3>
        <div class="return-policy-text">{{ section.settings.policy_text }}</div>
      </div>

      <!-- Right Column: Return Forms -->
      <div class="return-forms-column">
        <!-- Declare Return Form -->
        <div class="return-form">
          <h2 class="return-form-title">{{ section.settings.declare_title }}</h2>
          <div class="required-fields">{{ section.settings.required_fields_text }}</div>

          <div id="DeclareReturnSuccess" class="form-message form-message--success" style="display: none;">
            {{ section.settings.success_message }}
          </div>
          <div id="DeclareReturnError" class="form-message form-message--error" style="display: none;">
            {{ section.settings.error_message }}
          </div>

          <form id="DeclareReturnForm" action="/contact#contact_form" method="post">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">
            <input type="hidden" name="contact[subject]" value="Demande de retour">
            <!-- Add a hidden field to identify which form was submitted -->
            <input type="hidden" name="contact[form_name]" value="declare_return">

            <div class="form-fields">
              <div class="form-field">
                <input type="email" name="contact[email]" id="DeclareEmail" required placeholder=" ">
                <label class="form-field-label" for="DeclareEmail">{{ section.settings.email_label }}</label>
              </div>
              <div class="form-field">
                <input type="text" name="contact[order_number]" id="DeclareOrderNumber" required placeholder=" ">
                <label class="form-field-label" for="DeclareOrderNumber">
                  {{- section.settings.order_number_label -}}
                </label>
              </div>
            </div>

            <!-- Hidden field for the body content -->
            <input type="hidden" name="contact[body]" id="DeclareBody">

            <button type="submit" class="return-button" onclick="prepareDeclareForm()">
              {{ section.settings.declare_button_text }}
            </button>
          </form>
        </div>

        <!-- Track Return Form -->
        <div class="return-form">
          <h2 class="return-form-title">{{ section.settings.track_title }}</h2>
          <div class="required-fields">{{ section.settings.required_fields_text }}</div>

          <div id="TrackReturnSuccess" class="form-message form-message--success" style="display: none;">
            {{ section.settings.track_success_message }}
          </div>
          <div id="TrackReturnError" class="form-message form-message--error" style="display: none;">
            {{ section.settings.error_message }}
          </div>

          <form id="TrackReturnForm" action="/contact#contact_form" method="post">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">
            <input type="hidden" name="contact[subject]" value="Suivi de retour">
            <!-- Add a hidden field to identify which form was submitted -->
            <input type="hidden" name="contact[form_name]" value="track_return">

            <div class="form-fields">
              <div class="form-field">
                <input type="email" name="contact[email]" id="TrackEmail" required placeholder=" ">
                <label class="form-field-label" for="TrackEmail">{{ section.settings.email_label }}</label>
              </div>
              <div class="form-field">
                <input type="text" name="contact[order_number]" id="TrackOrderNumber" required placeholder=" ">
                <label class="form-field-label" for="TrackOrderNumber">{{ section.settings.order_number_label }}</label>
              </div>
            </div>

            <!-- Hidden field for the body content -->
            <input type="hidden" name="contact[body]" id="TrackBody">

            <button type="submit" class="return-button return-button-white" onclick="prepareTrackForm()">
              {{ section.settings.track_button_text }}
            </button>
          </form>
        </div>

        <!-- Return Instructions moved to right column -->
        <div class="return-instructions">
          <h2 class="instructions-title">{{ section.settings.instructions_title }}</h2>

          <div class="instruction-steps">
            <!-- Step 1 -->
            <div class="instruction-step">
              <div class="step-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#333" stroke-width="1"/>
                  <text x="12" y="16" text-anchor="middle" font-size="12" fill="#333">1</text>
                </svg>
              </div>
              <div class="step-content">
                {{ section.settings.step_1_text }}
              </div>
            </div>

            <!-- Step 2 -->
            <div class="instruction-step">
              <div class="step-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#333" stroke-width="1"/>
                  <text x="12" y="16" text-anchor="middle" font-size="12" fill="#333">2</text>
                </svg>
              </div>
              <div class="step-content">
                {{ section.settings.step_2_text }}
              </div>
            </div>

            <!-- Step 3 -->
            <div class="instruction-step">
              <div class="step-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="#333" stroke-width="1"/>
                  <text x="12" y="16" text-anchor="middle" font-size="12" fill="#333">3</text>
                </svg>
              </div>
              <div class="step-content">
                {{ section.settings.step_3_text }}
              </div>
            </div>
          </div>

          <a href="{{ section.settings.collection_points_url }}" class="collection-points-button">
            {{- section.settings.collection_points_button_text -}}
          </a>
        </div>
      </div>
    </div>

    <div class="return-separator"></div>

    <!-- Policy Details Section (Outside columns) -->
    <div class="policy-details">
      {{ section.settings.return_policy_details }}

      <a href="{{ section.settings.faq_url }}" class="faq-button">{{ section.settings.faq_button_text }}</a>
    </div>

    <div class="need-help">
      <div class="help-title">{{ section.settings.need_help_text }}</div>
      <div class="help-text">{{ section.settings.customer_support_text }}</div>
      <a href="{{ section.settings.chat_url }}" class="chat-button">{{ section.settings.chat_button_text }}</a>
    </div>
  </div>
</div>

<script>
  // Check for success/error parameters in URL and display appropriate messages
  document.addEventListener('DOMContentLoaded', function() {
    // Check if we're coming back from a form submission
    if (window.location.search.includes('contact_posted=true')) {
      // Get the form name from localStorage if available
      const formName = localStorage.getItem('lastSubmittedForm');
      
      if (formName === 'declare_return') {
        document.getElementById('DeclareReturnSuccess').style.display = 'block';
        // Scroll to the success message
        document.getElementById('DeclareReturnSuccess').scrollIntoView({ behavior: 'smooth', block: 'center' });
      } else if (formName === 'track_return') {
        document.getElementById('TrackReturnSuccess').style.display = 'block';
        // Scroll to the success message
        document.getElementById('TrackReturnSuccess').scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      
      // Clear the localStorage after showing the message
      localStorage.removeItem('lastSubmittedForm');
    }
  });

  // Prepare the declare return form before submission
  function prepareDeclareForm() {
    const email = document.getElementById('DeclareEmail').value;
    const orderNumber = document.getElementById('DeclareOrderNumber').value;
    const bodyField = document.getElementById('DeclareBody');
    
    // Format the body content
    const bodyContent = `Demande de retour\n\nEmail: ${email}\nNuméro de commande: ${orderNumber}`;
    
    // Set the body content
    bodyField.value = bodyContent;
    
    // Store the form name in localStorage to retrieve after redirect
    localStorage.setItem('lastSubmittedForm', 'declare_return');
    
    // The form will submit normally after this function completes
    return true;
  }
  
  // Prepare the track return form before submission
  function prepareTrackForm() {
    const email = document.getElementById('TrackEmail').value;
    const orderNumber = document.getElementById('TrackOrderNumber').value;
    const bodyField = document.getElementById('TrackBody');
    
    // Format the body content
    const bodyContent = `Suivi de retour\n\nEmail: ${email}\nNuméro de commande: ${orderNumber}`;
    
    // Set the body content
    bodyField.value = bodyContent;
    
    // Store the form name in localStorage to retrieve after redirect
    localStorage.setItem('lastSubmittedForm', 'track_return');
    
    // The form will submit normally after this function completes
    return true;
  }
</script>


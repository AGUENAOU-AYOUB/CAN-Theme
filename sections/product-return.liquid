<style>
  .product-return-section {
    padding: {{ section.settings.section_padding }}px 20px;
    background-color: {{ section.settings.background_color }};
    font-family: {{ section.settings.heading_font }}, sans-serif;
    color: #333;
    max-width: 1400px;
    margin: 0 auto;
  }

  .return-container {
    margin: 0 auto;
  }

  /* Main heading styles */
  .return-header {
    text-align: center;
    padding-bottom: 30px;
    border-bottom: 1px solid #e5e5e5;
    margin-bottom: 40px;
  }

  .return-main-heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 400;
    margin: 40px 0;
    font-family: {{ section.settings.heading_font }}, serif;
    line-height: 1.2;
  }

  /* Two column layout for desktop */
  .return-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  /* Policy column */
  .return-policy-column {
    width: 100%;
    padding-right: 20px;
  }

  .return-policy-title {
    color: {{ section.settings.policy_title_color }};
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 15px;
  }

  .return-policy-text {
    color: {{ section.settings.policy_text_color }};
    font-size: 14px;
    line-height: 1.7;
    margin-bottom: 40px;
  }

  .return-policy-text p {
    margin-bottom: 20px;
  }

  /* Forms column */
  .return-forms-column {
    width: 100%;
  }

  .return-form {
    margin-bottom: 60px;
  }

  .return-form-title {
    color: {{ section.settings.form_title_color }};
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 5px;
    font-family: {{ section.settings.heading_font }}, serif;
  }

  .required-fields {
    color: {{ section.settings.form_text_color }};
    font-size: 14px;
    margin-bottom: 25px;
    opacity: 0.7;
  }

  .form-fields {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  /* Animated form field */
  .form-field {
    width: 100%;
    margin-bottom: 25px;
    position: relative;
  }

  .form-field-label {
    position: absolute;
    left: 0;
    top: 12px;
    font-size: 14px;
    color: {{ section.settings.form_text_color }};
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .form-field input {
    width: 100%;
    padding: 12px 0;
    border: none;
    border-bottom: 1px solid #e0e0e0;
    font-size: 14px;
    outline: none !important;
    box-shadow: none !important;
    background: transparent;
    z-index: 1;
    position: relative;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0;
  }

  .form-field input:focus,
  .form-field input:not(:placeholder-shown) {
    border-color: {{ section.settings.input_focus_color }};
  }

  .form-field input:focus + .form-field-label,
  .form-field input:not(:placeholder-shown) + .form-field-label {
    font-size: 12px;
    top: -10px;
    color: {{ section.settings.input_focus_color }};
  }

  /* Button styles */
  .return-button {
    display: inline-block;
    padding: {{ section.settings.button_padding }}px 30px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    cursor: pointer;
    text-align: center;
    letter-spacing: 0.5px;
    min-width: 180px;
    transition: all 0.3s ease;
  }

  .return-button-white {
    background-color: {{ section.settings.white_button_bg_color }};
    color: {{ section.settings.white_button_text_color }};
    border: 1px solid {{ section.settings.white_button_border_color }};
  }

  .return-button:hover {
    opacity: 0.9;
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
  }

  .return-button-white:hover {
    background-color: {{ section.settings.white_button_hover_bg_color }};
    color: {{ section.settings.white_button_hover_text_color }};
  }

  /* Horizontal separator */
  .return-separator {
    height: 1px;
    background-color: #e5e5e5;
    width: 100%;
    margin: 60px 0;
  }

  /* Return instructions section */
  .return-instructions {
    margin: 40px 0;
  }

  .instructions-title {
    color: {{ section.settings.instructions_title_color }};
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 30px;
  }

  .instruction-steps {
    margin-bottom: 40px;
  }

  .instruction-step {
    display: flex;
    margin-bottom: 30px;
    align-items: flex-start;
  }

  .step-icon {
    flex: 0 0 24px;
    margin-right: 15px;
  }

  .step-content {
    flex: 1;
    font-size: 14px;
    line-height: 1.7;
    color: {{ section.settings.instructions_text_color }};
  }

  /* Collection points button */
  .collection-points-button {
    display: inline-block;
    padding: {{ section.settings.button_padding }}px 30px;
    background-color: {{ section.settings.white_button_bg_color }};
    color: {{ section.settings.white_button_text_color }};
    border: 1px solid {{ section.settings.white_button_border_color }};
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    cursor: pointer;
    text-align: center;
    margin: 20px 0 40px;
    min-width: 180px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .collection-points-button:hover {
    background-color: {{ section.settings.white_button_hover_bg_color }};
    color: {{ section.settings.white_button_hover_text_color }};
  }

  /* Policy details section */
  .policy-details {
    margin: 20px 0 40px;
  }

  .policy-details p {
    margin-bottom: 20px;
    font-size: 14px;
    line-height: 1.7;
    color: {{ section.settings.policy_details_color }};
  }

  /* FAQ Button */
  .faq-button {
    display: inline-block;
    padding: {{ section.settings.button_padding }}px 30px;
    background-color: {{ section.settings.white_button_bg_color }};
    color: {{ section.settings.white_button_text_color }};
    border: 1px solid {{ section.settings.white_button_border_color }};
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    cursor: pointer;
    text-align: center;
    margin: 20px 0 40px;
    min-width: 180px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .faq-button:hover {
    background-color: {{ section.settings.white_button_hover_bg_color }};
    color: {{ section.settings.white_button_hover_text_color }};
  }

  /* Help section */
  .need-help {
    margin: 40px 0;
  }

  .help-title {
    color: {{ section.settings.instructions_title_color }};
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 10px;
  }

  .help-text {
    color: {{ section.settings.instructions_text_color }};
    font-size: 14px;
    line-height: 1.7;
    margin-bottom: 20px;
  }

  .chat-button {
    display: inline-block;
    padding: {{ section.settings.button_padding }}px 30px;
    background-color: {{ section.settings.white_button_bg_color }};
    color: {{ section.settings.white_button_text_color }};
    border: 1px solid {{ section.settings.white_button_border_color }};
    border-radius: {{ section.settings.button_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    cursor: pointer;
    text-align: center;
    margin: 10px 0;
    min-width: 180px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .chat-button:hover {
    background-color: {{ section.settings.white_button_hover_bg_color }};
    color: {{ section.settings.white_button_hover_text_color }};
  }

  /* Form success and error messages */
  .form-message {
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 4px;
    display: none;
  }

  .form-message--success {
    background-color: #f8f9fa;
    border: 1px solid #28a745;
    color: #28a745;
  }

  .form-message--error {
    background-color: #f8f9fa;
    border: 1px solid #dc3545;
    color: #dc3545;
  }

  /* Responsive styles */
  @media screen and (min-width: 768px) {
    .return-content {
      display: flex;
    }


{%- comment -%}
  Enhanced meta-tags.liquid
  - Robust canonical / description / robots
  - Safe, absolute og:image selection + dimensions when available
  - Twitter & Open Graph
  - Minimal Organization JSON-LD
{%- endcomment -%}

{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: request.origin
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name

  if request.page_type == 'product'
    assign og_type = 'product'
  elsif request.page_type == 'article'
    assign og_type = 'article'
  elsif request.page_type == 'password'
    assign og_url = request.origin
  endif

  # canonical + description fallbacks
  assign canonical = canonical_url | default: request.original_url | default: request.origin
  assign safe_description = page_description | default: shop.meta_description | strip_newlines | escape

  # Determine noindex conditions
  assign noindex_conditions = false
  if shop.password_enabled
    assign noindex_conditions = true
  endif
  if request.page_type == 'cart' or request.page_type == 'checkout' or request.page_type == 'password' or request.page_type == 'search' or request.page_type == 'customers' or request.page_type == 'account' or request.page_type == 'admin'
    assign noindex_conditions = true
  endif
  if request.original_url contains 'preview_theme_id' or request.original_url contains 'preview_script_id'
    assign noindex_conditions = true
  endif

  # Decide og image: page_image > product featured media preview > product.featured_image > settings.social_sharing_image > shop.logo
  assign og_image_candidate = page_image

  if og_image_candidate == blank and request.page_type == 'product' and product
    # prefer featured_media.preview_image if available
    if product.featured_media and product.featured_media.preview_image
      assign og_image_candidate = product.featured_media.preview_image
    elsif product.featured_image
      assign og_image_candidate = product.featured_image
    endif
  endif

  if og_image_candidate == blank
    assign og_image_candidate = settings.social_sharing_image | default: shop.logo
  endif

  # choose a sensible size for social previews (1200x630 or 1024x1024 fallback)
  assign og_image_size = '1200x630'
%}

{%- comment -%} Basic tags {%- endcomment -%}
{%- if safe_description != blank -%}
  <meta name="description" content="{{ safe_description }}">
{%- endif -%}

<link rel="canonical" href="{{ canonical }}">

{%- if noindex_conditions -%}
  <meta name="robots" content="noindex, nofollow">
  <meta name="googlebot" content="noindex, nofollow">
{%- else -%}
  <meta name="robots" content="index, follow">
  <meta name="googlebot" content="index, follow">
{%- endif -%}

{%- comment -%} Open Graph & Twitter {%- endcomment -%}
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image_candidate and og_image_candidate != blank -%}
  {%- comment -%}
    Build an absolute image URL using img_url + absolute_url when available.
    We try a social-friendly size first; fall back to a generic image URL if filters are not supported for the object.
  {%- endcomment -%}

  {%- assign attempt_image = '' -%}

  {%- comment -%} If it's an image object with width/height or src accessible, try img_url -> absolute_url {%- endcomment -%}
  {%- if og_image_candidate | img_url: og_image_size -%}
    {%- assign attempt_image = og_image_candidate | img_url: og_image_size | absolute_url -%}
  {%- endif -%}

  {%- unless attempt_image -%}
    {%- if og_image_candidate | img_url: '1024x1024' -%}
      {%- assign attempt_image = og_image_candidate | img_url: '1024x1024' | absolute_url -%}
    {%- endif -%}
  {%- endunless -%}

  {%- comment -%} Final fallback: if candidate is a string (URL) or resource path, try to build an absolute url. {%- endcomment -%}
  {%- unless attempt_image -%}
    {%- if og_image_candidate contains 'http' or og_image_candidate contains '//' -%}
      {%- assign attempt_image = og_image_candidate -%}
    {%- else -%}
      {%- assign attempt_image = og_image_candidate | absolute_url -%}
    {%- endif -%}
  {%- endunless -%}

  {%- if attempt_image != blank -%}
    <meta property="og:image" content="{{ attempt_image }}">
    <meta property="og:image:secure_url" content="{{ attempt_image }}">
    <meta name="twitter:image" content="{{ attempt_image }}">
    {%- comment -%} Try to include dimensions if available on the object {%- endcomment -%}
    {%- if og_image_candidate.width and og_image_candidate.height -%}
      <meta property="og:image:width" content="{{ og_image_candidate.width }}">
      <meta property="og:image:height" content="{{ og_image_candidate.height }}">
    {%- endif -%}
  {%- endif -%}
{%- endif -%}

{%- if request.page_type == 'product' and product != blank -%}
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code | default: shop.currency }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">

{%- comment -%} Minimal Organization JSON-LD {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": {{ shop.name | json }},
  "url": {{ request.origin | json }},
  {%- if settings.social_twitter_link != blank -%}
  "sameAs": [ {{ settings.social_twitter_link | json }} ],
  {%- endif -%}
  "logo": {{ (settings.social_sharing_image | default: shop.logo) | img_url: '600x600' | absolute_url | json }}
}
</script>
